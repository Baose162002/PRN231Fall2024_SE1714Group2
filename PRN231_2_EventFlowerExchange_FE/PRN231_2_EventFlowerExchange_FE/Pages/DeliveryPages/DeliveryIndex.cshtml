@page
@model PRN231_2_EventFlowerExchange_FE.Pages.DeliveryPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].DeliveryStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].ReasonNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].PickupTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].DeliveryTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].DeliveryPersonnel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Delivery) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReasonNote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PickupTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.DeliveryAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryPersonnel.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DeliveryId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DeliveryId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DeliveryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
