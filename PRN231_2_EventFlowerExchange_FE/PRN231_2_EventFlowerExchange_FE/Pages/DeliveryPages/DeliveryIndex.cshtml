@page
@model PRN231_2_EventFlowerExchange_FE.Pages.DeliveryPages.IndexModel
@{
    ViewData["Title"] = "Delivery Orders";
}

<div class="container mx-auto p-6">
    <h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">Delivery Orders</h2>

    @if (Model.Deliveries != null && Model.Deliveries.Any())
    {
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white shadow-lg rounded-lg border border-gray-300">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="py-3 px-5 border-b border-gray-300 text-left text-gray-700 font-semibold">Order ID</th>
                        <th class="py-3 px-5 border-b border-gray-300 text-left text-gray-700 font-semibold">Customer Name</th>
                        <th class="py-3 px-5 border-b border-gray-300 text-left text-gray-700 font-semibold">Total Price</th>
                        <th class="py-3 px-5 border-b border-gray-300 text-left text-gray-700 font-semibold">Order Date</th>
                        <th class="py-3 px-5 border-b border-gray-300 text-left text-gray-700 font-semibold">Delivery Address</th>
                        <th class="py-3 px-5 border-b border-gray-300 text-left text-gray-700 font-semibold">Delivery Date</th>
                        <th class="py-3 px-5 border-b border-gray-300 text-left text-gray-700 font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var delivery in Model.Deliveries)
                    {
                        <tr class="hover:bg-gray-100">
                            <td class="py-3 px-5 border-b border-gray-300 text-gray-600">@delivery.OrderId</td>
                            <td class="py-3 px-5 border-b border-gray-300 text-gray-600">@delivery.CustomerName</td>
                            <td class="py-3 px-5 border-b border-gray-300 text-gray-600">$@delivery.TotalPrice.ToString("F2")</td>
                            <td class="py-3 px-5 border-b border-gray-300 text-gray-600">@delivery.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="py-3 px-5 border-b border-gray-300 text-gray-600">@delivery.DeliveryAddress</td>
                            <td class="py-3 px-5 border-b border-gray-300 text-gray-600">@delivery.DeliveryDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="py-3 px-5 border-b border-gray-300 text-center">
                                <form method="post" asp-page-handler="StartDelivery">
                                    <input type="hidden" name="OrderId" value="@delivery.OrderId" />
                                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">
                                        Deliver
                                    </button>
                                </form>
                            </td>
                        </tr>

                        <tr>
                            <td colspan="6" class="py-4 px-5 border-t border-gray-300 bg-gray-50">
                                <div class="font-semibold text-gray-700 mb-2">Order Details</div>
                                <table class="w-full border border-gray-300">
                                    <thead>
                                        <tr class="bg-gray-100">
                                            <th class="py-2 px-3 border-b border-gray-300 text-left text-sm text-gray-600">Flower Name</th>
                                            <th class="py-2 px-3 border-b border-gray-300 text-left text-sm text-gray-600">Quantity Ordered</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in delivery.OrderDetails)
                                        {
                                            <tr class="hover:bg-gray-50">
                                                <td class="py-2 px-3 border-b border-gray-300 text-gray-600 text-sm">@detail.Flower.Name</td>
                                                <td class="py-2 px-3 border-b border-gray-300 text-gray-600 text-sm">@detail.QuantityOrdered</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center text-gray-600">No delivery orders found.</div>
    }
</div>
