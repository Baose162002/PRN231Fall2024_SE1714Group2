@page
@model PRN231_2_EventFlowerExchange_FE.Pages.DeliveryPages.IndexModel
@{
    ViewData["Title"] = "Delivery Orders";
}

<div class="container mx-auto p-6">
    <h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">Delivery Orders</h2>

    @if (Model.Deliveries != null && Model.Deliveries.Any())
    {
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white shadow-md rounded border-collapse">
                <thead>
                    <tr>
                        <th class="py-3 px-5 border-b text-left text-gray-700 font-semibold">Order ID</th>
                        <th class="py-3 px-5 border-b text-left text-gray-700 font-semibold">Customer Name</th>
                        <th class="py-3 px-5 border-b text-left text-gray-700 font-semibold">Total Price</th>
                        <th class="py-3 px-5 border-b text-left text-gray-700 font-semibold">Order Date</th>
                        <th class="py-3 px-5 border-b text-left text-gray-700 font-semibold">Delivery Address</th>
                        <th class="py-3 px-5 border-b text-left text-gray-700 font-semibold">Delivery Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var delivery in Model.Deliveries)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="py-3 px-5 border-b text-gray-600">@delivery.OrderId</td>
                            <td class="py-3 px-5 border-b text-gray-600">@delivery.CustomerName</td>
                            <td class="py-3 px-5 border-b text-gray-600">$@delivery.TotalPrice.ToString("F2")</td>
                            <td class="py-3 px-5 border-b text-gray-600">@delivery.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="py-3 px-5 border-b text-gray-600">@delivery.DeliveryAddress</td>
                            <td class="py-3 px-5 border-b text-gray-600">@delivery.DeliveryDate.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>

                        <tr>
                            <td colspan="6" class="py-3 px-5 border-t bg-gray-50">
                                <div class="font-semibold text-gray-700">Order Details</div>
                                <table class="w-full mt-2">
                                    <thead>
                                        <tr>
                                            <th class="py-2 px-3 text-left text-sm text-gray-500">Flower Name</th>
                                            <th class="py-2 px-3 text-left text-sm text-gray-500">Quantity Ordered</th>
                                            <th class="py-2 px-3 text-left text-sm text-gray-500">Price per Unit</th>
                                            <th class="py-2 px-3 text-left text-sm text-gray-500">Total Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in delivery.OrderDetails)
                                        {
                                            <tr>
                                                <td class="py-2 px-3 text-gray-600 text-sm">@detail.Flower.Name</td>
                                                <td class="py-2 px-3 text-gray-600 text-sm">@detail.QuantityOrdered</td>
                                                <td class="py-2 px-3 text-gray-600 text-sm">$@detail.Price.ToString("F2")</td>
                                                <td class="py-2 px-3 text-gray-600 text-sm">$@detail.TotalPrice.ToString("F2")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center text-gray-600">No delivery orders found.</div>
    }
</div>
