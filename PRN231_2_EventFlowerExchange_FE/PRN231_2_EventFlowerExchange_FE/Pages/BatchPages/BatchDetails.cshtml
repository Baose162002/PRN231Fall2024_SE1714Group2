@page 
@model PRN231_2_EventFlowerExchange_FE.Pages.BatchPages.BatchDetailsModel
@{
    ViewData["Title"] = "Batch Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Batch Details</h1>

    @if (Model.Batch != null)
    {
        <dl class="row">
            <dt class="col-sm-3">Flower Type</dt>
            <dd class="col-sm-9">@Model.Batch.FlowerType</dd>

            <dt class="col-sm-3">Price Per Unit</dt>
            <dd class="col-sm-9">@Model.Batch.PricePerUnit.ToString("C")</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Batch.Description</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Batch.BatchQuantity</dd>

            <dt class="col-sm-3">Condition</dt>
            <dd class="col-sm-9">@Model.Batch.Condition</dd>

            <dt class="col-sm-3">Entry Date</dt>
            <dd class="col-sm-9">@Model.Batch.EntryDate</dd>

           
        </dl>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            Error loading batch details.
        </div>
    }

    <a href="/BatchIndex" class="btn btn-secondary mt-3">Back to List</a>
</div>
