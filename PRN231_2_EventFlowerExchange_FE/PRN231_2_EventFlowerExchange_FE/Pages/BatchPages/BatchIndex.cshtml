@page "/BatchIndex"
@model PRN231_2_EventFlowerExchange_FE.Pages.BatchPages.BatchIndexModel
@{
    ViewData["Title"] = "Batch List";
}
<div class="container mt-5 pt-4 text-center">
    <h1 class="mb-4">Batch List</h1>
    <a href="/BatchPages/CreateBatch" class="btn btn-primary mb-3">Create New Batch</a>

    @if (Model.Batches != null && Model.Batches.Any())
    {
        <div class="table-responsive d-flex justify-content-center">
            <table class="min-w-full divide-y divide-gray-200 table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Batch Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Remaining Quantity</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Entry Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var batch in Model.Batches)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">@batch.BatchName</td>
                            <td class="px-6 py-4 whitespace-nowrap">@batch.EventName</td>
                            <td class="px-6 py-4 whitespace-nowrap">@batch.EventDate</td>
                            <td class="px-6 py-4 whitespace-nowrap">@batch.Description</td>
                            <td class="px-6 py-4 whitespace-nowrap">@batch.BatchQuantity</td>
                            <td class="px-6 py-4 whitespace-nowrap">@batch.RemainingQuantity</td>
                            <td class="px-6 py-4 whitespace-nowrap">@batch.EntryDate</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @{
                                    var companyName = Model.Companies.FirstOrDefault(c => c.CompanyId == batch.CompanyId)?.CompanyName;
                                    if (companyName != null)
                                    {
                                        @companyName
                                    }
                                    else
                                    {
                                        <span class="text-red-500">Unknown Company</span>
                                    }
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <a href="/BatchPages/BatchDetails?id=@batch.BatchId" class="px-4 py-2 font-medium text-white bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:shadow-outline-blue active:bg-blue-600 transition duration-150 ease-in-out">Details</a>
                                <a href="/BatchPages/EditBatch?id=@batch.BatchId" class="px-4 py-2 font-medium text-white bg-yellow-600 rounded-md hover:bg-yellow-500 focus:outline-none focus:shadow-outline-yellow active:bg-yellow-600 transition duration-150 ease-in-out">Edit</a>
                                <a href="/BatchPages/DeleteBatch?id=@batch.BatchId" class="px-4 py-2 font-medium text-white bg-red-600 rounded-md hover:bg-red-500 focus:outline-none focus:shadow-outline-red active:bg-red-600 transition duration-150 ease-in-out">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No batches available at the moment.
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add any additional JavaScript functionality here if needed
    </script>
}
