@page
@model PRN231_2_EventFlowerExchange_FE.Pages.BatchPages.CreateBatchModel
@{
    ViewData["Title"] = "Create New Batch";
}
<div class="container mt-5 pt-4">
    <h1 class="mb-4">Create New Batch</h1>
    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var modelState in ViewData.ModelState.Values)
                {
                    foreach (var error in modelState.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }
    <form method="post">
        <div class="form-group">
            <label asp-for="Input.FlowerType">Flower Type</label>
            <input asp-for="Input.FlowerType" class="form-control" />
            <span asp-validation-for="Input.FlowerType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.PricePerUnit">Price Per Unit</label>
            <input asp-for="Input.PricePerUnit" class="form-control" />
            <span asp-validation-for="Input.PricePerUnit" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Description">Description</label>
            <textarea asp-for="Input.Description" class="form-control"></textarea>
            <span asp-validation-for="Input.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.BatchQuantity">Quantity</label>
            <input asp-for="Input.BatchQuantity" class="form-control" />
            <span asp-validation-for="Input.BatchQuantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Condition">Condition</label>
            <input asp-for="Input.Condition" class="form-control" />
            <span asp-validation-for="Input.Condition" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.EntryDate">Entry Date</label>
            <input asp-for="Input.EntryDate" class="form-control" type="date" />
            <span asp-validation-for="Input.EntryDate" class="text-danger"></span>
        </div>
    
    
        <!-- Flower Information Section -->
        <h3>Flower Information</h3>
        <div class="form-group">
            <label for="FlowerName">Flower Name</label>
            <input type="text" class="form-control" id="FlowerName" name="FlowerName" required />
        </div>
  
        <div class="form-group">
            <label for="FlowerImage">Flower Image</label>
            <input type="text" class="form-control" id="FlowerImage" name="FlowerImage" required />
        </div>
    
   
        <div class="form-group">
            <label for="Origin">Origin</label>
            <input type="text" class="form-control" id="Origin" name="Origin" required />
        </div>
        <div class="form-group">
            <label for="Color">Color</label>
            <input type="text" class="form-control" id="Color" name="Color" required />
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="/BatchIndex" class="btn btn-secondary">Cancel</a>
    </form>
</div>