@page "{id:int}"
@model PRN231_2_EventFlowerExchange_FE.Pages.OrderPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Order Details</h2>

@if (Model.Order == null)
{
    <p>Order not found.</p>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Order.OrderId</dd>

        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">@Model.Order.TotalPrice</dd>
    </dl>
    <a asp-page="./Index">Back to List</a>
}
