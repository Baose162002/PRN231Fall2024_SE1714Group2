@page "/Company/Delete/{id:int}"
@model PRN231_2_EventFlowerExchange_FE.Pages.CompanyPages.DeleteModel

@{
    ViewData["Title"] = "Delete Company";
    ViewData["ShowHeader"] = false;
    ViewData["ShowFooter"] = false;
}

<partial name="_AdminHeader" />
<div class="flex overflow-hidden bg-white pt-16">
    <partial name="_AdminNav" />
    <div class="bg-white border rounded-lg px-8 py-6 mx-auto my-8 max-w-2xl">
        <h2 class="text-2xl font-medium mb-4 text-red-600">Delete Company</h2>
        <p class="mb-4 text-gray-700">Are you sure you want to delete this company?</p>

        <div class="bg-gray-100 p-4 rounded-lg mb-6">
            <h3 class="text-lg font-medium mb-2">Company Information</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                    <p class="font-medium text-gray-700">Company ID:</p>
                    <p>@Model.Company.CompanyId</p>
                </div>
                <div>
                    <p class="font-medium text-gray-700">Company Name:</p>
                    <p>@Model.Company.CompanyName</p>
                </div>
                <div class="sm:col-span-2">
                    <p class="font-medium text-gray-700">Address:</p>
                    <p>@Model.Company.CompanyAddress</p>
                </div>
                <div class="sm:col-span-2">
                    <p class="font-medium text-gray-700">Description:</p>
                    <p>@Model.Company.CompanyDescription</p>
                </div>
                <div>
                    <p class="font-medium text-gray-700">Status:</p>
                    <p>@Model.Company.Status</p>
                </div>
            </div>
        </div>

        <form method="post" id="deleteCompanyForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Company.CompanyId" />
            <div class="flex justify-between items-center mt-6">
                <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600">Delete Company</button>
                <a href="/CompanyIndex" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Back to List</a>
            </div>
        </form>
    </div>
</div>

