@page
@model PRN231_2_EventFlowerExchange_FE.Pages.Register.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div id="register" class="register">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="text-center mb-4">Register</h1>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="text-black" asp-for="RegisterRequest.FullName"></label>
                    <input asp-for="RegisterRequest.FullName" class="form-control" />
                    <span asp-validation-for="RegisterRequest.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-black" asp-for="RegisterRequest.Email"></label>
                    <input asp-for="RegisterRequest.Email" class="form-control" />
                    <span asp-validation-for="RegisterRequest.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-black" asp-for="RegisterRequest.Phone"></label>
                    <input asp-for="RegisterRequest.Phone" class="form-control" />
                    <span asp-validation-for="RegisterRequest.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-black" asp-for="RegisterRequest.Address"></label>
                    <input asp-for="RegisterRequest.Address" class="form-control" />
                    <span asp-validation-for="RegisterRequest.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-black" asp-for="RegisterRequest.Password"></label>
                    <input asp-for="RegisterRequest.Password" class="form-control" type="password" />
                    <span asp-validation-for="RegisterRequest.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3">Register</button>
            </form>
        </div>
    </div>
</div>
