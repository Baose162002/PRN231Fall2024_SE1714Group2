@page "/RegisterSeller"
@model PRN231_2_EventFlowerExchange_FE.Pages.Register.RegisterSellerModel
@{
    ViewData["Title"] = "Register Seller";
}

<div id="register" class="plants py-16">
    <div class="mt-10 flex bg-white rounded-lg shadow-lg overflow-hidden mx-auto max-w-sm lg:max-w-4xl">
        <div class="hidden lg:block lg:w-1/2 bg-cover"
             style="background-image:url('https://images.unsplash.com/photo-1530092285049-1c42085fd395?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxleHBsb3JlLWZlZWR8MXx8fGVufDB8fHx8fA%3D%3D')">
        </div>
        <div class="w-full p-8 lg:w-1/2">
            <h1 class="text-2xl font-semibold text-gray-700 text-center mb-4">Register as Seller</h1>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">@Model.SuccessMessage</span>
                </div>
            }

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

                <h2 class="text-lg font-semibold text-gray-700 mt-4">User Information</h2>
                <div class="form-group mt-4">
                    <label class="text-gray-700" asp-for="RegisterRequest.CreateUser.FullName">Full Name</label>
                    <input asp-for="RegisterRequest.CreateUser.FullName" class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" placeholder="Enter your full name" required />
                    <span asp-validation-for="RegisterRequest.CreateUser.FullName" class="text-red-500"></span>
                </div>
                <div class="form-group mt-4">
                    <label class="text-gray-700" asp-for="RegisterRequest.CreateUser.Email">Email</label>
                    <input asp-for="RegisterRequest.CreateUser.Email" type="email" class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" placeholder="Enter your email" required />
                    <span asp-validation-for="RegisterRequest.CreateUser.Email" class="text-red-500"></span>
                </div>
                <div class="form-group mt-4">
                    <label class="text-gray-700" asp-for="RegisterRequest.CreateUser.Phone">Phone</label>
                    <input asp-for="RegisterRequest.CreateUser.Phone" type="tel" pattern="0[0-9]{9}" class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" placeholder="Enter your phone number (start with 0, 10 digits)" required />
                    <span asp-validation-for="RegisterRequest.CreateUser.Phone" class="text-red-500"></span>
                </div>
                <div class="form-group mt-4">
                    <label class="text-gray-700" asp-for="RegisterRequest.CreateUser.Address">Address</label>
                    <input asp-for="RegisterRequest.CreateUser.Address" class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" placeholder="Enter your address" required />
                    <span asp-validation-for="RegisterRequest.CreateUser.Address" class="text-red-500"></span>
                </div>
                <div class="form-group mt-4">
                    <label class="text-gray-700" asp-for="RegisterRequest.CreateUser.Password">Password</label>
                    <input asp-for="RegisterRequest.CreateUser.Password" type="password"
                           pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@@#%&])[A-Za-z\d@@#%&]{8,}"
                           class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none"
                           placeholder="Enter your password" required />
                    <span asp-validation-for="RegisterRequest.CreateUser.Password" class="text-red-500"></span>
                                            <p class="text-xs text-red-500 mt-1">Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt.</p>

                </div>

                <h2 class="text-lg font-semibold text-gray-700 mt-4">Company Information</h2>
                <div class="form-group mt-4">
                    <label class="text-gray-700" asp-for="RegisterRequest.CreateCompany.CompanyName">Company Name</label>
                    <input asp-for="RegisterRequest.CreateCompany.CompanyName" class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" placeholder="Enter your company name" required />
                    <span asp-validation-for="RegisterRequest.CreateCompany.CompanyName" class="text-red-500"></span>
                </div>
                <div class="form-group mt-4">
                    <label class="text-gray-700" asp-for="RegisterRequest.CreateCompany.CompanyAddress">Company Address</label>
                    <input asp-for="RegisterRequest.CreateCompany.CompanyAddress" class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" placeholder="Enter your company address" required />
                    <span asp-validation-for="RegisterRequest.CreateCompany.CompanyAddress" class="text-red-500"></span>
                </div>
                <div class="form-group mt-4">
                    <label class="text-gray-700" asp-for="RegisterRequest.CreateCompany.TaxNumber">Tax Number</label>
                    <input asp-for="RegisterRequest.CreateCompany.TaxNumber" pattern="\d{10}" class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" placeholder="Enter your 10-digit tax number" required />
                    <span asp-validation-for="RegisterRequest.CreateCompany.TaxNumber" class="text-red-500"></span>
                </div>
                <div class="form-group mt-4">
                    <label class="text-gray-700" asp-for="RegisterRequest.CreateCompany.City">City</label>
                    <input asp-for="RegisterRequest.CreateCompany.City" class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" placeholder="Enter your city" required />
                    <span asp-validation-for="RegisterRequest.CreateCompany.City" class="text-red-500"></span>
                </div>
                <div class="form-group mt-4">
                    <label class="text-gray-700" asp-for="RegisterRequest.CreateCompany.PostalCode">Postal Code</label>
                    <input asp-for="RegisterRequest.CreateCompany.PostalCode" pattern="\d{5}" class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" placeholder="Enter your 5-digit postal code" required />
                    <span asp-validation-for="RegisterRequest.CreateCompany.PostalCode" class="text-red-500"></span>
                </div>
                <div class="form-group mt-4">
                    <label class="text-gray-700" asp-for="RegisterRequest.CreateCompany.CompanyDescription">Company Description</label>
                    <textarea asp-for="RegisterRequest.CreateCompany.CompanyDescription" class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" placeholder="Enter your company description" required></textarea>
                    <span asp-validation-for="RegisterRequest.CreateCompany.CompanyDescription" class="text-red-500"></span>
                </div>

                <div class="mt-8">
                    <button type="submit" class="bg-gray-700 text-white font-bold py-2 px-4 w-full rounded hover:bg-gray-600">Register</button>
                </div>

                <div class="mt-4 flex items-center justify-between">
                    <span class="border-b w-1/5 md:w-1/4"></span>
                    <a href="/Login" class="text-xs text-gray-500 uppercase">sign in</a>
                    <span class="border-b w-1/5 md:w-1/4"></span>
                </div>
                <div class="mt-4 flex items-center justify-between">
                    <span class="border-b w-1/5 md:w-1/4"></span>
                    <a href="/Register" class="text-xs text-gray-500 uppercase">or sign up as user</a>
                    <span class="border-b w-1/5 md:w-1/4"></span>
                </div>
            </form>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div id="successModal" class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50">
        <div class="bg-white rounded-lg shadow-lg max-w-sm w-full p-6">
            <div class="text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-green-500 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5 3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h2 class="text-2xl font-semibold mt-4">Đăng ký thành công!</h2>
                <p class="text-gray-600 mt-2">@Model.SuccessMessage</p>
            </div>

          <div class="mt-6 text-center">
                <a href="/Login" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 focus:outline-none inline-block">
                    Login
                </a>
            </div>
        </div>
    </div>

    <script>
        function closeModal() {
            document.getElementById("successModal").style.display = "none";
        }
    </script>
}