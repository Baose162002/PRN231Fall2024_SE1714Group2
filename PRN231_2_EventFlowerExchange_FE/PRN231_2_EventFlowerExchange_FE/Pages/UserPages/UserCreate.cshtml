@page
@model PRN231_2_EventFlowerExchange_FE.Pages.UserPages.UserCreateModel
@{
    ViewData["Title"] = "Create User";
}

<h2>Create User</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="UserDTO.FullName">Full Name</label>
        <input asp-for="UserDTO.FullName" class="form-control" />
        <span asp-validation-for="UserDTO.FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserDTO.Email">Email</label>
        <input asp-for="UserDTO.Email" class="form-control" />
        <span asp-validation-for="UserDTO.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserDTO.Password">Password</label>
        <input asp-for="UserDTO.Password" class="form-control" type="password" />
        <span asp-validation-for="UserDTO.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserDTO.Phone">Phone</label>
        <input asp-for="UserDTO.Phone" class="form-control" />
        <span asp-validation-for="UserDTO.Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserDTO.Address">Address</label>
        <input asp-for="UserDTO.Address" class="form-control" />
        <span asp-validation-for="UserDTO.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserDTO.Role">Role</label>
        <select asp-for="UserDTO.Role" class="form-control">
            <option value="Buyer">Buyer</option>
            <option value="Seller">Seller</option>
            <option value="Admin">Admin</option>
        </select>
        <span asp-validation-for="UserDTO.Role" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}