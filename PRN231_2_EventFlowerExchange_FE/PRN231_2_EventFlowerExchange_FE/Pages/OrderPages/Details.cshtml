@page "{id:int}"
@model PRN231_2_EventFlowerExchange_FE.Pages.OrderPages.DetailsModel
@{
    ViewData["Title"] = "Order Details";
    ViewData["ShowHeader"] = false;
    ViewData["ShowFooter"] = false;
}

<div class="bg-gray-100 min-h-screen">
    <partial name="_AdminHeader" />

    <div class="flex overflow-hidden bg-white pt-16">
        <partial name="_AdminNav" />

        <div id="main-content" class="h-full w-full bg-gray-50 relative overflow-y-auto lg:ml-64">
            <main class="py-10 px-4">
                <div class="max-w-7xl mx-auto">
                    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                        <h1 class="text-2xl font-bold mb-6">Order Details</h1>

                        @if (Model.Order != null)
                        {
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div class="mb-4">
                                    <label class="block text-gray-700 text-sm font-bold mb-2">Order ID</label>
                                    <p class="text-gray-600 bg-gray-100 p-2 rounded">@Model.Order.OrderId</p>
                                </div>
                                <div class="mb-4">
                                    <label class="block text-gray-700 text-sm font-bold mb-2">Total Price</label>
                                    <p class="text-gray-600 bg-gray-100 p-2 rounded">@Model.Order.TotalPrice</p>
                                </div>
                                <div class="mb-4">
                                    <label class="block text-gray-700 text-sm font-bold mb-2">Order Status</label>
                                    <p class="text-gray-600 bg-gray-100 p-2 rounded">@Model.Order.OrderStatus</p>
                                </div>
                                <div class="mb-4 md:col-span-2">
                                    <label class="block text-gray-700 text-sm font-bold mb-2">Delivery Address</label>
                                    <p class="text-gray-600 bg-gray-100 p-2 rounded">@Model.Order.DeliveryAddress</p>
                                </div>
                                <div class="mb-4">
                                    <label class="block text-gray-700 text-sm font-bold mb-2">Order Date</label>
                                    <p class="text-gray-600 bg-gray-100 p-2 rounded">@Model.Order.OrderDate</p>
                                </div>
                                <div class="mb-4">
                                    <label class="block text-gray-700 text-sm font-bold mb-2">Delivery Date</label>
                                    <p class="text-gray-600 bg-gray-100 p-2 rounded">@Model.Order.DeliveryDate</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                                <strong class="font-bold">Error!</strong>
                                <span class="block sm:inline"> Unable to load order details.</span>
                            </div>
                        }


                        <div class="mt-6">
                            <a href="/OrderIndex" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>
