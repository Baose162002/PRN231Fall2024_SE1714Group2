@page "/OrderIndex"
@model PRN231_2_EventFlowerExchange_FE.Pages.OrderPages.OrderIndexModel
@{
    ViewData["Title"] = "Order List";
}
<div class="container mt-5 pt-4 text-center">
    <h1 class="mb-4">Order List</h1>
    <a href="/OrderPages/CreateOrder" class="btn btn-primary mb-3">Create New Order</a>

    @if (Model.Orders != null && Model.Orders.Any())
    {
        <div class="table-responsive d-flex justify-content-center">
            <table class="min-w-full divide-y divide-gray-200 table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Price</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Delivery Address</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Delivery Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>

                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">@order.OrderDate</td>
                            <td class="px-6 py-4 whitespace-nowrap">@order.TotalPrice.ToString("C")</td>
                            <td class="px-6 py-4 whitespace-nowrap">@order.DeliveryAddress</td>
                            <td class="px-6 py-4 whitespace-nowrap">@order.DeliveryDate</td>

                            <td class="px-6 py-4 whitespace-nowrap">@order.OrderStatus</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <a href="/OrderPages/OrderDetails?id=@order.OrderId" class="px-4 py-2 font-medium text-white bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:shadow-outline-blue active:bg-blue-600 transition duration-150 ease-in-out">Details</a>
                                <a href="/OrderPages/EditOrder?id=@order.OrderId" class="px-4 py-2 font-medium text-white bg-yellow-600 rounded-md hover:bg-yellow-500 focus:outline-none focus:shadow-outline-yellow active:bg-yellow-600 transition duration-150 ease-in-out">Edit</a>
                                <a href="/OrderPages/DeleteOrder?id=@order.OrderId" class="px-4 py-2 font-medium text-white bg-red-600 rounded-md hover:bg-red-500 focus:outline-none focus:shadow-outline-red active:bg-red-600 transition duration-150 ease-in-out">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No orders available at the moment.
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add any additional JavaScript functionality here if needed
    </script>
}
