@page "/OrderIndex"
@model PRN231_2_EventFlowerExchange_FE.Pages.OrderPages.OrderIndexModel
@{
    ViewData["Title"] = "Order List";
}
<div class="container mt-5 pt-4">
    <h1 class="mb-4">Order List</h1>

    <a href="/OrderPages/CreateOrder" class="btn btn-primary mb-3">Create New Order</a>

    @if (Model.Orders != null && Model.Orders.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Order Date</th>
                        <th>Total Price</th>
                        <th>Delivery Address</th>
                        <th>Delivery Date</th>
                        <th>Status</th>
                        <th>Customer</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>@order.OrderDate</td>
                            <td>@order.TotalPrice.ToString("C")</td>
                            <td>@order.DeliveryAddress</td>
                            <td>@order.DeliveryDate</td>
                            <td>@order.OrderStatus</td>
                            <td>
                                <a href="/OrderPages/OrderDetails?id=@order.OrderId" class="btn btn-info btn-sm">Details</a>
                                <a href="/OrderPages/EditOrder?id=@order.OrderId" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/OrderPages/DeleteOrder/@order.OrderId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No orders available at the moment.
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add any additional JavaScript functionality here if needed
    </script>
}
